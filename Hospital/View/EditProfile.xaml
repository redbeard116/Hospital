<Window x:Class="Hospital.View.EditProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Hospital.ViewModel"
        d:DataContext="{d:DesignInstance Type=vm:EditProfileVM, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Name="edit"
        Title="Изменить профиль" Height="250" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0"
               Grid.Row="0"
               VerticalAlignment="Center"
               Content="Имя:"/>
        <Label Grid.Column="0"
               Grid.Row="1"
               VerticalAlignment="Center"
               Content="Фамилия:"/>
        <Label Grid.Column="0"
               Grid.Row="2"
               VerticalAlignment="Center"
               Content="День рождение:"/>
        <Label Grid.Column="0"
               Grid.Row="3"
               VerticalAlignment="Center"
               Content="Email:"/>
        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 VerticalAlignment="Center"
                 Text="{Binding User.FirstName}"/>
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 VerticalAlignment="Center"
                 Text="{Binding User.SecondName}"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 IsEnabled="False"
                 VerticalAlignment="Center"
                 Text="{Binding User.BirthDate}"/>
        <TextBox Grid.Column="1"
                 Grid.Row="3"
                 VerticalAlignment="Center"
                 Text="{Binding User.Email}"/>
        <Button Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Изменить"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Command="{Binding EditProfileCmd}"
                CommandParameter="{Binding ElementName=edit}"/>
    </Grid>
</Window>
